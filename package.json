{
  "name": "volume",
  "version": "1.11.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently --kill-others-on-fail -n \"Next,Convex,Stripe\" -c \"cyan,magenta,yellow\" \"bun run dev:next\" \"bun run dev:convex\" \"bun run dev:stripe\"",
    "dev:next": "next dev --turbopack",
    "dev:convex": "convex dev",
    "dev:stripe": "./scripts/dev-stripe.sh",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "analyze": "ANALYZE=true bun run build",
    "prepare": "lefthook install || true",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage --run",
    "test:e2e": "playwright test",
    "sync:prod": "./scripts/pull-prod-data.sh",
    "lint:fix": "eslint . --fix --max-warnings=0",
    "test:affected": "vitest --related --run",
    "security:audit": "bun pm scan",
    "security:scan": "trufflehog git file://. --only-verified --fail --no-update",
    "quality:check": "tsx scripts/verify-coverage.ts",
    "quality:full": "bun run typecheck && bun run lint && bun run test:coverage && bun run build",
    "generate:releases": "tsx scripts/generate-releases.ts"
  },
  "packageManager": "bun@1.3.9",
  "dependencies": {
    "@clerk/nextjs": "^6.37.4",
    "@hookform/resolvers": "^5.2.2",
    "@openrouter/ai-sdk-provider": "^2.2.3",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@sentry/nextjs": "^10.39.0",
    "@vercel/speed-insights": "^1.3.1",
    "ai": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "convex": "^1.31.7",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.34.0",
    "import-in-the-middle": "2.0.6",
    "lucide-react": "^0.575.0",
    "next": "^16.1.6",
    "next-themes": "^0.4.6",
    "openai": "^6.22.0",
    "posthog-js": "^1.347.2",
    "react": "^19.2.4",
    "react-activity-calendar": "^2.7.15",
    "react-body-highlighter": "^2.0.5",
    "react-dom": "^19.2.4",
    "react-hook-form": "^7.71.1",
    "react-markdown": "^10.1.0",
    "recharts": "^3.7.0",
    "require-in-the-middle": "8.0.1",
    "server-only": "^0.0.1",
    "sonner": "^2.0.7",
    "stripe": "^20.3.1",
    "tailwind-merge": "^3.4.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@clerk/testing": "^1.13.36",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@google/genai": "^1.41.0",
    "@next/bundle-analyzer": "^16.1.6",
    "@playwright/test": "^1.58.2",
    "@sentry/cli": "^2.58.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.13",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "convex-test": "^0.0.41",
    "dotenv": "^17.3.1",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.6",
    "js-yaml": "^4.1.1",
    "jsdom": "^27.4.0",
    "lefthook": "^2.1.1",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "tailwindcss": "^3.4.19",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings=0"
    ]
  }
}
